		ВКМ_ДатаНачалаДействияДоговора = Дата(1,1,1);
		ВКМ_ДатаОкончанияДействияДоговора = Дата(1,1,1);
		ВКМ_СтоимостьЧасаРаботыСпециалиста = 0;

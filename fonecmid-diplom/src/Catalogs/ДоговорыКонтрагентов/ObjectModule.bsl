		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
			Нстр("ru = ""Дата окончания договора должна быть больше даты начала"""), , "ВКМ_ДатаОкончанияДействияДоговора", 
			"Объект", Отказ);
	КонецЕсли;
	
